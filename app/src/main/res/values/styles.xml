<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="title" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="other" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/other</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="newsDetailTitle" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="newsDetailDesc" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textColor">@color/other</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>